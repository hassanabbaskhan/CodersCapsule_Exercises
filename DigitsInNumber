/*
Write a program to count no of digits in an entered number .
 
 */


using System;
using System.Threading;
namespace Question
{
    class Program
    {
        static void Main(string[] args)
        {
        start:

            Console.Write("Enter number: ");
            int number = int.Parse(Console.ReadLine());
                        
            int digit = 0;
            
            while (number != 0)
            {
                
                number  = number / 10;
                digit ++;

            }
            Console.WriteLine(digit);

            goto start;
        }
            
    }

}
