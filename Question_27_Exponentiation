/*
 
27. Write a program to get Base and Power value and print its Exponent.
 
 */


using System;
namespace Question
{
    class Program
    {
        static void Main(string[] args)
        {
            double num; //base is reserve keyword, so using num as variable for base
            double power;
            double result;
            
            Console.Write("Enter the base value : ");
            num=Convert.ToDouble(Console.ReadLine());

            Console.Write("Enter the power value : ");
            power = Convert.ToDouble(Console.ReadLine());

            result = (Math.Pow(num, power));

            Console.Write(result);

            Console.ReadLine();
            
        }
        
    }
}
