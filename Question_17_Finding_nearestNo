// 17. Write a program to check which number nearest to the value 100 among two given integers.

using System;
namespace CheckNearstNo
{
    class program
    {
        static void Main(string[] args)
        {
            start:
            {
                int a, b;
                
                Console.WriteLine("enter a number a = ");
                a = Convert.ToInt32(Console.ReadLine());
                
                Console.WriteLine("enter a number b = ");
                b = Convert.ToInt32(Console.ReadLine());
                
                
                if (a > b & a < 100 | a < b & a > 100) 
                {
                    Console.WriteLine("{0} is nearest to 100",a);
                }
                
                else
                {
                    Console.WriteLine("{0} is nearest to 100",b);
                    
                }
                
                Console.ReadKey();
                Console.Write("\n");
            }
            
            goto start;

        }
    }
}
